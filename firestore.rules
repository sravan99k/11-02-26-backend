rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOrganization() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'organization';
    }
    
    function isSchool() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'school';
    }
    
    function isTeacher() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }
    
    function isStudent() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'student';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAdmin() || isOwner(userId);
      allow delete: if isAdmin();
    }
    
    // Organizations collection
    match /organizations/{orgId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Schools collection
    match /schools/{schoolId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isOrganization();
    }
    
    // Students collection
    match /students/{studentId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin() || isOrganization() || isSchool();
      allow update: if isAdmin() || isOrganization() || isSchool() || isOwner(studentId);
      allow delete: if isAdmin() || isOrganization() || isSchool();
    }
    
    // Teachers collection
    match /teachers/{teacherId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin() || isOrganization() || isSchool();
      allow update: if isAdmin() || isOrganization() || isSchool() || isOwner(teacherId);
      allow delete: if isAdmin() || isOrganization() || isSchool();
    }
    
    // Assessments collection
    match /assessments/{assessmentId} {
      allow read: if isAuthenticated();
      allow create: if isStudent();
      allow update: if false; // Immutable after creation
      allow delete: if isAdmin();
    }
    
    // Assessment Results
    match /assessmentResults/{resultId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only functions can write
    }
    
    // Wellness data
    match /wellness/{userId} {
      allow read: if isOwner(userId) || isAdmin() || isTeacher();
      allow write: if isOwner(userId);
    }
    
    // Journal entries
    match /journals/{userId}/entries/{entryId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
