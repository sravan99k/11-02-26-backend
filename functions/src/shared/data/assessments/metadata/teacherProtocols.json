{
    "S-SEL": {
        "indicators": [
            "Negative self-talk (e.g., 'I am stupid')",
            "Rejects praise ('Teacher is just being nice')",
            "Avoids leading roles in group work",
            "Comparing self poorly with high-achieving cousins/peers",
            "Afraid to try new things due to fear of failure"
        ],
        "context": "Establishing baseline self-perception and confidence in their own abilities.",
        "actions": {
            "low": [
                "Notice and name strengths in class",
                "Give small roles that use their talents",
                "Reinforce growth-mindset language"
            ],
            "medium": [
                "Ask 'What are you proud of this week?'",
                "Connect them to small success tasks",
                "Use positive reinforcement for effort, not just results"
            ],
            "high": [
                "Student says 'I am useless/can't do anything'",
                "Avoid harsh or public criticism",
                "Co-create a 'Small Success Plan' with student and counselor"
            ]
        }
    },
    "A-CON": {
